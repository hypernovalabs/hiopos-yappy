<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="24dp"
    android:background="@drawable/bg_refund_final_dialog"
    android:layout_gravity="center"
    android:layout_marginStart="24dp"
    android:layout_marginEnd="24dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Confirmación Final de Devolución"
        android:textSize="22sp"
        android:textStyle="bold"
        android:textColor="@color/refund_final_dialog_text_primary"
        android:gravity="center_horizontal"
        android:layout_marginBottom="12dp"/>

    <TextView
        android:id="@+id/tvFinalRefundAmount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:text="Monto devuelto: $28.89"
        android:textSize="18sp"
        android:textColor="@color/refund_final_dialog_text_secondary"
        android:gravity="center_horizontal"
        android:layout_marginBottom="20dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Detalle de la devolución *"
        android:textColor="@color/refund_final_dialog_text_secondary"
        android:textSize="14sp"
        android:layout_marginBottom="4dp"/>

    <EditText
        android:id="@+id/etRefundDetail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Ej: efectivo, transferencia manual, etc."
        android:inputType="textMultiLine"
        android:minLines="3"
        android:maxLines="5"
        android:gravity="top"
        android:textColor="@color/refund_final_dialog_text_primary"
        android:textColorHint="@color/refund_final_dialog_input_hint"
        android:padding="12dp"
        android:background="@drawable/rounded_edittext_background_dark"
        android:layout_marginBottom="20dp"/>

    <CheckBox
        android:id="@+id/cbConfirmManualRefund"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Confirmo que he realizado la devolución manualmente."
        android:textColor="@color/refund_final_dialog_checkbox_text"
        android:buttonTint="@color/refund_final_dialog_text_secondary"
        android:layout_marginBottom="24dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnCancelFinalConfirmation"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="CANCELAR"
            android:backgroundTint="@color/refund_final_dialog_button_cancel_background"
            android:textColor="@color/refund_final_dialog_button_cancel_text"
            android:paddingVertical="14dp"
            android:layout_marginEnd="8dp"
            app:cornerRadius="8dp"
            style="@style/Widget.MaterialComponents.Button"/>

        <Button
            android:id="@+id/btnConfirmFinalRefund"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="CONFIRMAR DEVOLUCIÓN"
            android:backgroundTint="@color/refund_final_dialog_button_confirm_background"
            android:textColor="@color/refund_final_dialog_button_confirm_text"
            android:paddingVertical="14dp"
            android:layout_marginStart="8dp"
            android:enabled="false"
            app:cornerRadius="8dp"
            style="@style/Widget.MaterialComponents.Button"/>
    </LinearLayout>
</LinearLayout>