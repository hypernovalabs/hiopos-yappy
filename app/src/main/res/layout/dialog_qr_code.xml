<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/yappy_screen_background_blue">

    <!-- Logo de Yappy -->
    <ImageView
        android:id="@+id/ivYappyLogo"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="48dp"
        android:src="@drawable/ic_yappy_logo"
        android:adjustViewBounds="true"
        android:scaleType="fitCenter"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:contentDescription="Yappy Logo"/>

    <!-- Título "Escanea el código QR con Yappy" -->
    <TextView
        android:id="@+id/tvDialogTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginHorizontal="24dp"
        android:text="@string/scan_qr_title"
        android:textSize="18sp"
        android:textColor="@color/white"
        android:fontFamily="sans-serif-medium"
        android:gravity="center"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ivYappyLogo" />

    <!-- Monto del pago -->
    <TextView
        android:id="@+id/tvQrAmount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:textSize="22sp"
        android:textColor="@color/white"
        android:fontFamily="sans-serif-medium"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvDialogTitle"
        tools:text="12.34 PAB" />

    <!-- Código QR - Fondo blanco para el código -->
    <FrameLayout
        android:id="@+id/qrBackground"
        android:layout_width="270dp"
        android:layout_height="270dp"
        android:layout_marginTop="24dp"
        android:background="@color/white"
        android:padding="7dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvQrAmount">

        <!-- Código QR -->
        <ImageView
            android:id="@+id/ivQrCode"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitCenter"
            android:contentDescription="@string/qr_code_description" />
    </FrameLayout>

    <!-- Estado del pago (cuenta regresiva) -->
    <TextView
        android:id="@+id/tvQrStatus"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="24dp"
        android:layout_marginTop="24dp"
        android:textAlignment="center"
        android:textSize="18sp"
        android:textColor="@color/white"
        android:fontFamily="sans-serif"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/qrBackground"
        tools:text="Tiempo restante: 120 segundos" />

    <!-- Texto de instrucción reposicionado encima del botón -->
    <TextView
        android:id="@+id/tvQrInstruction"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="30dp"
        android:layout_marginBottom="24dp"
        android:text="@string/scan_qr_instruction"
        android:textAlignment="center"
        android:textSize="16sp"
        android:fontFamily="sans-serif"
        android:textColor="@color/white"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@id/btnCancelQr" />

    <!-- Botón de cancelación -->
    <Button
        android:id="@+id/btnCancelQr"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="30dp"
        android:layout_marginBottom="48dp"
        android:text="@string/cancel_payment"
        android:textSize="16sp"
        android:textColor="@color/white"
        android:fontFamily="sans-serif-medium"
        android:background="@drawable/shape_button_cancel_yappy"
        android:padding="14dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>